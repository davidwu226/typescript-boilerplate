{
  "name": "typescript-boilerplate",
  "version": "0.0.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "license": "UNLICENSED",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "doc": "typedoc --exclude \"**/fetch_mock/**\" --exclude \"**/*+(index|.spec|.e2e).ts\" src",
    "prepublishOnly": "npm run build",
    "run": "npm run build; node dist",
    "test": "mocha -r ts-node/register tests/\\*\\*/\\*.spec.ts",
    "test:watch": "mocha --require ts-node/register --watch -R min --watch-files src, tests/\\*\\*/\\*.spec.ts"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/chai-as-promised": "^7.1.2",
    "@types/deep-equal-in-any-order": "^1.0.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.9.5",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "deep-equal-in-any-order": "^1.0.25",
    "mocha": "^7.1.1",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.8.1",
    "typedoc": "^0.17.3",
    "typescript": "^3.8.3"
  }
}
