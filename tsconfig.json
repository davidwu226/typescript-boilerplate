{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "declaration": true,
    "strict": false,
    "sourceMap": true,
    "lib": [
      "es2018",
      "es2020.Promise",
    ],
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react"
  },
  "include": [
    "src/**/*",
    "__tests__/**/*"
  ],
  "exclude": [
    "node_modules", 
  ]
}
